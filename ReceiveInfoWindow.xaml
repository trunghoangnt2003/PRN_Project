<Window x:Class="PRN_Project.ReceiveInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN_Project"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ReceiveWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">

            <Grid>
                <StackPanel Margin="100 0">
                    <TextBlock FontSize="20" Margin="0 10" Name="txtIdPhieu">Id phiếu nhập :</TextBlock>
                    <TextBlock FontSize="15" Margin="0 10" Name="txtTongTien">Id phiếu nhập :</TextBlock>
                    <Label>Tên Sản Phẩm</Label>
                    <ComboBox Name="cbProduct" SelectedValuePath="Id" DisplayMemberPath="DisplayName"></ComboBox>

                    <Label>Số lượng</Label>
                    <TextBox Name="txtSoluong" PreviewTextInput="NumberTextBox_PreviewTextInput" Text="{Binding Count,Mode=OneWay}" DataContext="{Binding ElementName=lvList, Path=SelectedItem}"></TextBox>
                    
                    
                    <Label>Giá Nhập</Label>
                    <TextBox Name="txtGianhap" PreviewTextInput="NumberTextBox_PreviewTextInput" Text="{Binding InputPrice,Mode=OneWay}" DataContext="{Binding ElementName=lvList, Path=SelectedItem}"></TextBox>


                    <Label Name="lbLoi" Visibility="Collapsed">Sản phẩm lỗi</Label>
                    <TextBox Name="tbLoi" PreviewTextInput="NumberTextBox_PreviewTextInput" Text="{Binding CountReport,Mode=OneWay}" DataContext="{Binding ElementName=lvList, Path=SelectedItem}" Visibility="Collapsed"></TextBox>
                    <Label Name="txtLoi" Margin="0 5" Visibility="Collapsed"></Label>
                </StackPanel>
            </Grid>


        </Grid>
        <Grid Grid.Row="1">
            <WrapPanel HorizontalAlignment="Center" Height="auto">
                <Button Content="Thêm" Width="70" Margin="5" Click="Button_Click_Add" Name="btn1"></Button>
                <Button Content="Sửa" Width="70" Margin="5" Click="Button_Click_2" Name="btn2"></Button>
                <Button Content="Xóa" Width="70" Margin="5" Click="Button_Click_1" Name="btn3"></Button>
                <Button Content="Báo cáo chất lượng" Width="140" Margin="5" Name="btn4" Visibility="Collapsed" Click="Button_Click_3"></Button>
                <Button Content="Xuất excel" Width="70" Margin="5" Click="Button_Click"></Button>
                <!--<Button Content="Xuất json" Width="70" Margin="5" Click="Button_Click_3"></Button>
                <Button Content="Nhập json" Width="70" Margin="5"></Button>-->
            </WrapPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="91*"/>
                <ColumnDefinition Width="109*"/>
            </Grid.ColumnDefinitions>
            <ListView Name="lvList" Grid.ColumnSpan="2" SelectionChanged="lvList_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Sản phẩm" DisplayMemberBinding="{Binding IdProductNavigation.DisplayName}"></GridViewColumn>
                        <GridViewColumn Header="Số lượng" DisplayMemberBinding="{Binding Count}"></GridViewColumn>
                        <GridViewColumn Header="Giá Nhập" DisplayMemberBinding="{Binding InputPrice}"></GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
